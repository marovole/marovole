---
import '../styles/global.css';
import { getLangFromUrl } from '../i18n/utils';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description: desc, image: ogImage } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const description = desc || 'AI-First Product Manager & Vibecoder';
const image = ogImage || '/images/og.png';
const langAttr = lang === 'zh' ? 'zh-CN' : 'en';
---

<!doctype html>
<html lang={langAttr}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={`https://marovole.com${Astro.url.pathname.replace(/\/$/, '')}`} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
  </head>
  <body class="min-h-screen flex flex-col">
    <slot />
  </body>
</html>
