---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { getCollection } from 'astro:content';
import { useTranslations } from '../../../i18n/utils';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects
    .filter(p => p.data.lang === 'en')
    .map(project => ({
      params: { slug: project.slug },
      props: { project },
    }));
}

const { project } = Astro.props;
const lang = 'en';
const t = useTranslations(lang);
const { Content } = await project.render();

const formatDate = (date: string | Date) => {
  const d = typeof date === 'string' ? new Date(date) : date;
  return d.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
};

const backLink = `/${lang}/#projects`;
---

<Layout title={`${project.data.title} | marovole`} description={project.data.description}>
  <Header />

  <main class="flex-grow pt-20">
    <!-- Hero -->
    <section class="py-16 px-6 bg-[var(--color-bg-card)] border-b border-[var(--color-border)]">
      <div class="max-w-4xl mx-auto">
        <a
          href={backLink}
          class="inline-flex items-center gap-2 text-sm text-[var(--color-text-muted)] hover:text-[var(--color-primary)] transition-colors mb-8"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          {t('project.back')}
        </a>

        <div class="mb-6 flex flex-wrap gap-2">
          {project.data.tags.map(tag => (
            <span class="px-3 py-1 text-sm font-medium rounded-full bg-[var(--color-secondary)]/50 text-[var(--color-text-muted)]">
              {tag}
            </span>
          ))}
        </div>

        <h1 class="text-4xl md:text-5xl font-bold text-[var(--color-text)] mb-4">
          {project.data.title}
        </h1>

        <p class="text-xl text-[var(--color-text-muted)] mb-8 max-w-2xl">
          {project.data.description}
        </p>

        <div class="flex flex-wrap items-center gap-4">
          {project.data.demoUrl && (
            <a
              href={project.data.demoUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-6 py-3 rounded-[var(--radius-button)] bg-[var(--color-primary)] text-white text-base font-semibold tracking-wide shadow-md hover:bg-[var(--color-primary-dark)] hover:shadow-lg transition-all duration-200"
            >
              {t('project.visit')}
              <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          )}
          {project.data.repoUrl && (
            <a
              href={project.data.repoUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-6 py-3 rounded-[var(--radius-button)] border-2 border-[var(--color-border)] text-[var(--color-text)] text-base font-semibold tracking-wide hover:bg-[var(--color-secondary)]/40 hover:border-[var(--color-text-muted)] transition-all duration-200"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              {t('project.source')}
            </a>
          )}
          <span class="text-sm text-[var(--color-text-muted)]">
            {t('project.published')} {formatDate(project.data.date)}
          </span>
        </div>
      </div>
    </section>

    <!-- Featured Image -->
    {project.data.image && (
      <div class="max-w-4xl mx-auto px-6 py-8">
        <div class="relative overflow-hidden rounded-xl shadow-lg bg-[var(--color-secondary)]/20">
          <img
            src={project.data.image}
            alt={project.data.title}
            class="w-full h-[240px] md:h-[320px] object-cover"
            decoding="async"
          />
        </div>
      </div>
    )}

    <!-- Content -->
    <article class="py-16 px-6">
      <div class="max-w-3xl mx-auto prose prose-lg prose-stone">
        <Content />
      </div>
    </article>
  </main>

  <Footer />
</Layout>
