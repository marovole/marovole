---
interface Props {
  projects: Array<{
    slug: string;
    data: {
      title: string;
      description: string;
      tags: string[];
      image?: string;
      demoUrl?: string;
      repoUrl?: string;
    };
  }>;
}

const { projects } = Astro.props;
---

<section id="projects" class="py-20 px-6 relative">
  <!-- 背景装饰 -->
  <div class="absolute inset-0 pointer-events-none opacity-5" style="background-image: linear-gradient(90deg, var(--color-primary) 1px, transparent 1px), linear-gradient(180deg, var(--color-primary) 1px, transparent 1px); background-size: 50px 50px;"></div>

  <div class="max-w-6xl mx-auto relative z-10">
    <div class="flex items-center gap-4 mb-8">
      <h2 class="text-3xl font-bold text-[var(--color-text)] font-mono">
        精选<span class="gradient-text">项目</span>
      </h2>
      <div class="flex-1 h-px bg-gradient-to-r from-[var(--color-primary)] to-transparent"></div>
    </div>
    <p class="text-[var(--color-text-muted)] mb-12 max-w-2xl font-mono text-sm">
      这里展示了我近期的作品，包括 AI 产品、工具应用和实验性项目。
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <article class="group">
          <a href={`/projects/${project.slug}`} class="block card-hover bg-[var(--color-bg-card)] rounded-[var(--radius-card)] overflow-hidden border border-[var(--color-border)] h-full">
            <!-- 图片区域 -->
            <div class="aspect-video bg-[var(--color-bg-card-hover)] relative overflow-hidden">
              {project.data.image ? (
                <img
                  src={project.data.image}
                  alt={project.data.title}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                  loading="lazy"
                  decoding="async"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center">
                  <svg class="w-12 h-12 text-[var(--color-text-muted)]/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              )}
              <!-- 悬浮遮罩 -->
              <div class="absolute inset-0 bg-gradient-to-t from-[var(--color-bg-card)] via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>

            <!-- 内容区域 -->
            <div class="p-6">
              <h3 class="text-lg font-semibold text-[var(--color-text)] mb-2 group-hover:text-[var(--color-primary)] transition-colors">
                {project.data.title}
              </h3>
              <p class="text-sm text-[var(--color-text-muted)] mb-4 line-clamp-2 font-mono">
                {project.data.description}
              </p>

              <!-- 标签 -->
              <div class="flex flex-wrap gap-2 mb-4">
                {project.data.tags.map(tag => (
                  <span class="px-2.5 py-1 text-xs font-mono rounded-full border border-[var(--color-border)] bg-[var(--color-bg-card)] text-[var(--color-text-muted)] group-hover:border-[var(--color-primary)] group-hover:text-[var(--color-primary)] transition-colors">
                    {tag}
                  </span>
                ))}
              </div>

              <!-- 链接指示 -->
              <div class="flex items-center gap-4">
                {project.data.demoUrl && (
                  <span class="text-xs font-mono text-[var(--color-primary)] flex items-center gap-1">
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                    访问
                  </span>
                )}
                {project.data.repoUrl && (
                  <span class="text-xs font-mono text-[var(--color-text-muted)] flex items-center gap-1 group-hover:text-[var(--color-text)] transition-colors">
                    <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                    源码
                  </span>
                )}
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>
  </div>
</section>
